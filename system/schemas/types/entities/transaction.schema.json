{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.memogarden.net/entities/transaction.schema.json",
  "title": "Transaction",
  "description": "Financial transaction entity in the Core layer. Represents user's belief about a payment.",
  "type": "object",
  "properties": {
    "amount": {
      "type": "number",
      "description": "Transaction amount (negative for expenses, positive for income)",
      "examples": [-45.50, 2000.00, -12.99]
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "default": "SGD",
      "pattern": "^[A-Z]{3}$",
      "examples": ["SGD", "USD", "EUR"]
    },
    "transaction_date": {
      "type": "string",
      "description": "Date of transaction (YYYY-MM-DD format)",
      "format": "date",
      "examples": ["2026-01-30"]
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the transaction",
      "default": "",
      "examples": ["Grocery shopping at NTUC", "Salary payment", "Coffee"]
    },
    "account": {
      "type": "string",
      "description": "Account label (e.g., 'Household', 'Personal', 'Business')",
      "examples": ["Household", "Personal"]
    },
    "category": {
      "type": ["string", "null"],
      "description": "Category label (e.g., 'Food', 'Transport', 'Salary')",
      "examples": ["Food", "Transport", "Salary", null]
    },
    "author": {
      "type": "string",
      "description": "Who created this transaction record",
      "default": "system",
      "examples": ["system", "user", "claude-code"]
    },
    "recurrence_id": {
      "type": ["string", "null"],
      "description": "UUID of recurrence template if generated from one",
      "examples": ["core_12345678-1234-1234-1234-123456789abc", null]
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Additional notes or context",
      "examples": ["Monthly recurring expense", null]
    }
  },
  "required": ["amount", "currency", "transaction_date", "account", "author"],
  "additionalProperties": false
}
